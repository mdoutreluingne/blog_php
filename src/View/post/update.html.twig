{% extends 'base.html.twig' %}

{% block body %}
<div class="container-form col-12">
	<h2 class="h2 text-center">Mettre Ã  jour un article un article</h2>
	<form method="post" action="index.php?access=post&id={{ post[0].id }}&action=update" enctype="multipart/form-data">
		<div class="form-group">
			<label>Titre</label>
			<input type="text" name="title" id="title" class="form-control" required value="{{ post[0].title }}">
		</div>
		<div class="form-group">
			<label>Choisissez l'image principale de l'article</label>
			<input type="file" name="picture" id="picture" accept="image/x-png,image/jpeg">
		</div>
		<div class="form-group">
			<label>Rentrez une courte description de l'article</label>
			<textarea name="chapo" id="chapo" class="form-control" rows="5" required>{{ post[0].chapo }}</textarea>
		</div>
		<div class="form-group">
			<label>Rentrez le contenu de l'article</label>
			<textarea name="content" id="content" class="form-control" rows="5" required>{{ post[0].content }}</textarea>
		</div>
		<button class="btn btn-secondary" name="submit" type="submit">Modifier</button>
	</form>
</div>
{% endblock %}

