<aside class="col-lg-4">
    <!-- Widget [Search Bar Widget]-->
    <div class="widget search">
        <header>
            <h3 class="h6">Recherche</h3>
        </header>
        <form action="index.php?access=blog" method="post" enctype="multipart/form-data" class="search-form">
            <div class="form-group">
                <input type="text" name="search" placeholder="Que cherchez-vous ?" value="{{ search }}">
                <button type="submit" class="submit"><i class="fas fa-search"></i></button>
            </div>
        </form>
    </div>
    <!-- Widget [Latest Posts Widget]        -->
    <div class="widget latest-posts">
        <header>
            <h3 class="h6">Derniers posts</h3>
        </header>
        <div class="blog-posts">
            {% for lastPost in lastPosts %}
            <a href="index.php?access=post&id={{ lastPost.id }}&action=read">
                <div class="item d-flex align-items-center">
                    <div class="image">
                        {% if lastPost.picture != null %}
                        <img src="{{ imgPosts }}/{{ lastPost.picture }}" alt="{{ lastPost.picture }}" class="img-fluid">
                        {% endif %}
                    </div>
                    <div class="title"><strong>{{ lastPost.title }}</strong>
                        <div class="d-flex align-items-center">
                            <p class="text-muted">{{ lastPost.chapo|slice(0, 50) ~ '...' }}</p>
                        </div>
                    </div>
                </div>
            </a>
            {% endfor %}
        </div>
    </div>
</aside>